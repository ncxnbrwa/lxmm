<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="@dimen/home_rl_padding"
    >

    <!--医生姓名-->
    <RelativeLayout
        android:id="@+id/rl_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/home_rl_padding"
        >

        <RelativeLayout
            android:id="@+id/rl_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/home_rl_padding"
            >

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textSize="@dimen/header_center"
                />
        </RelativeLayout>

        <View
            android:id="@+id/separate"
            android:layout_width="@dimen/grap1"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/rl_inside"
            android:background="@color/separate_view_color"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/home_rl_padding"
        >

        <TextView
            android:id="@+id/tv_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

        <TextView
            android:id="@+id/tv_doctor_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_doctor_hospital"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/msg_text"
            />
    </RelativeLayout>
</LinearLayout>