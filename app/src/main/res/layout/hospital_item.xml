<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
    >

    <com.nuocf.yshuobang.myview.ZQImageViewRoundOval
        android:id="@+id/hospital_iv"
        android:layout_width="@dimen/width153"
        android:layout_height="@dimen/height90"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/grap15"
        android:scaleType="fitCenter"
        android:src="@mipmap/nopicture_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/grap10"
        android:layout_marginTop="@dimen/grap10"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/hospital_name"
            style="@style/lv_tv_titlestyle"
            android:text="title"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/hospital_level"
                style="@style/lv_tv_substyle"
                android:layout_alignLeft="@+id/fragment_news_title"
                android:layout_below="@+id/fragment_news_title"
                android:layout_marginLeft="@dimen/grap15"
                android:text="三级甲等"
                android:textColor="@color/blue"
                />

            <TextView
                style="@style/lv_tv_substyle"
                android:layout_alignLeft="@+id/fragment_news_title"
                android:layout_below="@+id/fragment_news_title"
                android:layout_marginLeft="@dimen/grap15"
                android:text="科室"
                android:textColor="@color/msg_text"
                />

            <TextView
                android:id="@+id/hospital_section_num"
                style="@style/lv_tv_substyle"
                android:layout_alignLeft="@+id/fragment_news_title"
                android:layout_below="@+id/fragment_news_title"
                android:layout_marginLeft="@dimen/grap15"
                android:text="0"
                android:textColor="@color/msg_text"
                />

            <TextView
                style="@style/lv_tv_substyle"
                android:layout_alignLeft="@+id/fragment_news_title"
                android:layout_below="@+id/fragment_news_title"
                android:layout_marginLeft="@dimen/grap15"
                android:text="医生"
                android:textColor="@color/msg_text"
                />

            <TextView
                android:id="@+id/hospital_doctor_num"
                style="@style/lv_tv_substyle"
                android:layout_alignLeft="@+id/fragment_news_title"
                android:layout_below="@+id/fragment_news_title"
                android:layout_marginLeft="@dimen/grap15"
                android:text="0"
                android:textColor="@color/msg_text"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>