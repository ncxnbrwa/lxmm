<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/home_rl_padding"
    >

    <com.nuocf.yshuobang.myview.ZQImageViewRoundOval
        android:id="@+id/iv_doctor_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/llver"
        android:src="@mipmap/head_normal"
        />

    <LinearLayout
        android:id="@+id/llver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_doctor_icon"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/grap15"
                android:text="宋慧乔"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_doctor_potision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_doctor_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_doctor_name"
                android:text="主任医师"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grap15"
            android:layout_marginTop="5dp"
            android:text="上海中山医院"
            android:textColor="@color/msg_text"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_doctor_goodat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grap15"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="擅长领域:"
            android:textColor="@color/msg_text"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>