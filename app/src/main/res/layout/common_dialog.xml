<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/dan_gray"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/home_rl_padding"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/home_rl_padding"
            android:text="内容"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/grap1"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_sel"
            android:paddingBottom="@dimen/grap20"
            android:paddingTop="@dimen/grap20"
            android:text="左按钮"
            android:textColor="@color/dialog_button_color_sel"
            android:textSize="16sp"
            />

        <View
            android:layout_width="@dimen/grap1"
            android:layout_height="40dp"
            android:background="@color/gray"
            />

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_sel"
            android:paddingBottom="@dimen/grap20"
            android:paddingTop="@dimen/grap20"
            android:text="右按钮"
            android:textColor="@color/dialog_button_color_sel"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>