<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.nuocf.yshuobang.myview.photoWidget.PhotoTouchView
            android:id="@+id/pic_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.nuocf.yshuobang.myview.photoWidget.PhotoTouchView>

        <!--存放viewPager指示点的布局-->
        <com.nuocf.yshuobang.myview.PicIndexView
            android:id="@+id/pic_index"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/header_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:drawableLeft="@mipmap/navigation_back"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        />

</RelativeLayout>