<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >
    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/low_gray"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/item_syn_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_province_bg"
            android:gravity="left"
            android:padding="@dimen/grap15"
            android:text="综合排序"
            android:textColor="@color/selcolor_region_item_text"
            android:textSize="@dimen/font16"
            />

        <include
            layout="@layout/line"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/item_three_a_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_province_bg"
            android:gravity="left"
            android:padding="@dimen/grap15"
            android:text="三甲优先"
            android:textColor="@color/selcolor_region_item_text"
            android:textSize="@dimen/font16"
            android:visibility="gone"
            />

        <include layout="@layout/line"/>

        <Button
            android:id="@+id/item_positon_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_province_bg"
            android:gravity="left"
            android:padding="@dimen/grap15"
            android:text="职位从高到低"
            android:textColor="@color/selcolor_region_item_text"
            android:textSize="@dimen/font16"
            />

        <include
            layout="@layout/line"/>
    </LinearLayout>
</LinearLayout>